{
    "name": "loom/config",
    "type": "library",
    "description": "A lightweight configuration management tool",
    "keywords": [
        "php",
        "loom",
        "config",
        "provider"
    ],
    "homepage": "https://github.com/loomphp/config",
    "license": "MIT",
    "authors": [
        {
            "name": "Augustus Kamau",
            "email": "kaugustus15@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "loom/util": "1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.16",
        "mikey179/vfsstream": "^1.6",
        "squizlabs/php_codesniffer": "^3.5",
        "loom/container": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Loom\\Config\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LoomTest\\Config\\": "test"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "check": [
            "@check-style",
            "@test"
        ],
        "check-style": "phpcs src test",
        "fix-style": "phpcbf src test",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
